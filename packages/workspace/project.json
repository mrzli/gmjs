{
  "root": "packages/workspace",
  "targets": {
    "cloc": {
      "executor": "./tools/executors/cloc:cloc"
    },
    "example-executor": {
      "executor": "@gmnx/example-plugin:build"
    },
    "cloc2": {
      "executor": "@gmnx/util:cloc",
      "options": {
        "ignoreDirs": [
          ".idea",
          ".vscode",
          "node_modules",
          "dist"
        ],
        "ignoreFiles": ["package-lock.json"]
      }
    }
  }
}
