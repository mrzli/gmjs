{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "properties": {
    "collections": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/entity"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "collections"
  ],
  "additionalProperties": false,
  "$defs": {
    "entity": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "properties": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/property"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "optional": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "properties"
      ],
      "additionalProperties": false
    },
    "property": {
      "oneOf": [
        {
          "$ref": "#/$defs/propertyString"
        },
        {
          "$ref": "#/$defs/propertyInt"
        },
        {
          "$ref": "#/$defs/propertyLong"
        },
        {
          "$ref": "#/$defs/propertyBool"
        },
        {
          "$ref": "#/$defs/propertyDecimal"
        },
        {
          "$ref": "#/$defs/propertyObjectId"
        },
        {
          "$ref": "#/$defs/propertyDate"
        },
        {
          "$ref": "#/$defs/propertyEnumString"
        },
        {
          "$ref": "#/$defs/propertyArray"
        },
        {
          "$ref": "#/$defs/entity"
        }
      ]
    },
    "propertyString": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^string$"
        },
        "pattern": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "propertyInt": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^int$"
        },
        "minimum": {
          "type": "integer"
        },
        "exclusiveMinimum": {
          "type": "integer"
        },
        "maximum": {
          "type": "integer"
        },
        "exclusiveMaximum": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "propertyLong": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^long$"
        },
        "minimum": {
          "type": "integer"
        },
        "exclusiveMinimum": {
          "type": "integer"
        },
        "maximum": {
          "type": "integer"
        },
        "exclusiveMaximum": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "propertyBool": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^bool$"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "propertyDecimal": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^decimal$"
        },
        "minimum": {
          "type": "number"
        },
        "exclusiveMinimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "exclusiveMaximum": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "propertyObjectId": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^objectId$"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "propertyDate": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^date$"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "additionalProperties": false
    },
    "propertyEnumString": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^enumString$"
        },
        "enumValues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "type",
        "enumValues"
      ],
      "additionalProperties": false
    },
    "propertyArray": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "itemType": {
          "oneOf": [
            {
              "$ref": "#/$defs/valueType"
            },
            {
              "$ref": "#/$defs/entity"
            }
          ]
        }
      },
      "required": [
        "name",
        "itemType"
      ],
      "additionalProperties": false
    },
    "valueType": {
      "type": "string",
      "enum": [
        "string",
        "int",
        "long",
        "bool",
        "decimal",
        "objectId"
      ]
    }
  }
}
